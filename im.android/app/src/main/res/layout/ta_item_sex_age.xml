<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ta_item_sex_age_parent"
    android:layout_width="28dp"
    android:layout_height="12dp"
    android:background="@drawable/ta_shape_yuanjiao_girl">

    <ImageView
        android:id="@+id/ta_item_iv_icon_sex"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/ta_icon_famle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/ta_item_tv_sex_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/ta_item_iv_icon_sex"
        android:layout_centerVertical="true"
        android:text="18"
        android:textSize="10sp"
        android:textColor="@color/white"/>

</RelativeLayout>