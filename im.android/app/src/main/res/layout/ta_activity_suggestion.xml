<?xml version="1.0" encoding="utf-8"?>
<!-- 意见反馈 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/ta_include_topbar"
        layout="@layout/ta_main_topbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ta_include_topbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/ta_suggestion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="意见反馈"
            android:textSize="18sp"/>
        
        <EditText
            android:id="@+id/ta_suggestion_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ta_suggestion_text"
            android:gravity="top"
            android:textSize="14sp"
            android:textColor="@color/blue"
            android:hint="请反馈您的宝贵意见,字数不超过200字"
            android:background="@color/white"
            android:inputType="textMultiLine"/>

        <RelativeLayout
            android:id="@+id/ta_suggestion_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ta_suggestion_content"
            android:background="@drawable/ta_rl_btn_selector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提  交"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>