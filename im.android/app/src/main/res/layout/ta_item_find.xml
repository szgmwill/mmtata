<?xml version="1.0" encoding="utf-8"?>
<!-- 用户在线列表 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ta_item_find_re_parent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true" >

        <RelativeLayout
            android:id="@+id/ta_item_find_re_avatar"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <include layout="@layout/ta_item_user_avatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/ta_item_find_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/ta_item_find_re_avatar"
            android:text="发现你的Ta"
            android:textColor="#353535"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/ta_item_find_rl_sexage"
            android:layout_toRightOf="@+id/ta_item_find_tv_name"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <include layout="@layout/ta_item_sex_age" />

        </RelativeLayout>

        <TextView
            android:id="@+id/ta_item_find_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="6dp"
            android:text="刚刚"
            android:textColor="#AAAAAA"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/ta_item_find_re_avatar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ta_item_find_tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="等待属于你的Ta"
                android:textColor="#AAAAAA"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/ta_item_find_rl_unitprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp">

                <include layout="@layout/ta_item_unit_price" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/ta_color_main_gap_line" />
    </RelativeLayout>

</RelativeLayout>