<?xml version="1.0" encoding="utf-8"?>
<!--用户语言标签选择(多选)-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_gray">

    <!--头部bar-->
    <include android:id="@+id/ta_user_guide_lan_topbar"
        layout="@layout/ta_main_topbar" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp">

        <!--欢迎语-->
        <LinearLayout
            android:id="@+id/ta_ll_welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ta_tv_user_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张木头"
                android:textColor="@color/black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="您爱听什么话?"
                android:textSize="20sp"
                android:textColor="@color/bg_headerbar_spinner_press"
                />

        </LinearLayout>

    </RelativeLayout>

    <!--网格填充标签内容-->
    <GridView
        android:id="@+id/ta_gv_user_lan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:paddingLeft="20dp"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:numColumns="2">

    </GridView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp">


        <Button
            android:id="@+id/ta_user_lan_submit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="提  交"
            android:textSize="25sp"
            android:background="@drawable/ta_btn_girl_selector"/>

    </RelativeLayout>
</RelativeLayout>